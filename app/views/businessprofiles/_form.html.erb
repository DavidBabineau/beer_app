<%= form_for(@b_profile) do |f| %>
<% if @b_profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@b_profile.errors.count, "error") %> prohibited this business profile from being saved:</h2>

      <ul>
        <% @b_profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<form class="form-horizontal">
 <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Business Name" %>
  </div>

  <div class="form-group">
    <%= f.text_field :phone_number, class: "form-control", placeholder: "(  )___-____" %>
  </div>

  <div class="form-group">
    <%= f.text_field :address, class: "form-control", placeholder: "123 Main Street, City State Zip" %>
  </div>

  <div class="form-group">
  <%= f.text_area :bio, class: "form-control", :rows => 10, placeholder: "Tell the world about your brewery!" %>
  </div>

  <div class="field form-group">
    <%= f.label "Photo" %><br>
    <%= f.file_field :avatar %>
  </div>

  <div class="form-group">
  <%= f.text_field :motto, class: "form-control", placeholder: "Tagline Time!" %>
  </div>

  <div class="form-group">
   <%= f.label "Atmosphere" %>
   <%= f.collection_select(:atmosphere_id, Atmosphere.all, :id, :status) %><br />

    <%= f.label "Attraction" %>
    <%= f.collection_select(:attraction_id, Attraction.all, :id, :name) %><br />

  <div class="cant-see-me">
    <%= f.label :business_user_id %><br>
    <%= f.text_field :business_user_id, value: current_business_user.id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

</form>
<% end %>
